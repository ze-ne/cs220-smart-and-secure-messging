<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <LinearLayout
        android:id="@+id/my_message_box"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/my_message_bubble"
        android:maxWidth="240dp"
        android:padding="15dp"
        android:elevation="5dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <TextView
            android:id="@+id/my_message_text"
            android:text=""
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxWidth="240dp"
            android:textColor="#ffffff"
            />
        <ImageView
            android:id="@+id/my_message_image"
            android:layout_width="wrap_content"
            android:maxWidth="240dp"
            android:adjustViewBounds="true"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <TextView
            android:id="@+id/my_message_time"
            android:text="12:00 PM"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="10sp"
            android:textStyle="bold"
            android:layout_marginRight="10dp"
            app:layout_constraintBottom_toBottomOf="@+id/my_message_box"
            app:layout_constraintRight_toLeftOf="@+id/my_message_box" />

</androidx.constraintlayout.widget.ConstraintLayout>